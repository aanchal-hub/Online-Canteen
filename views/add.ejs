<h2 align="center">Manage Menu</h2>
  <hr>
  <div class="add-form">
    <form action="/index" action="/place" method="POST">
        <div class="form-group">
          <label for="add-id">ID</label>
          <input type="text" class="form-control" name="item[item_id]" required style="font-size: 20px;">
        </div>
        <div class="form-group">
          <label for="item-name">Item Name</label>
          <input type="text" class="form-control" name="item[item_name]" required style="font-size: 20px;">
        </div>
        <div class="form-group">
          <label for="cost">Cost</label>
          <input type="text" class="form-control" name="item[item_cost]" required style="font-size: 20px;">
        </div>
        <div class="form-check">
          <label>Status </label><br>
          <input class="form-check-input" type="radio" name="item[item_status]" value="Available">
            <label class="form-check-label" for="item[item_status]">Available
            </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="item[item_status]" value="Not Available">
            <label class="form-check-label" for="item[item_status]">
              Not Available
            </label>
        </div>
        <button type="submit" class="btn btn-default add-btn">ADD</button>
    </form>
  </div>


